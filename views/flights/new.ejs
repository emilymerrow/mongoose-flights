<%- include('../partials/header') %>

 <h2>Enter a Flight</h2>
    <form action="/flights" method="POST">
        <label>Airline:
            <select name="airline" required>
                <option value="American">American</option>
                <option value="Delta">Delta</option>
                <option value="Southwest">Southwest</option>
                <option value="United">United</option>
            </select>
        </label><br>
        <label>Airport:
            <select name="airport" required>
                <option value="ATL">ATL</option>
                <option value="DFW">DFW</option>
                <option value="DEN" selected>DEN</option>
                <option value="LAX">SAN</option>
            </select>
        </label><br>
        <label>Flight Number:
            <input type="number" name="flightNo" min="10" max="9999" required>
        </label><br>
        <label>Departures:
            <input type="date" name="departs" min="<%= new Date().toISOString().split('T')[0] %>" required>
        </label><br>
        <input type="submit" value="Submit">
    </form>
    
</body>
</html>